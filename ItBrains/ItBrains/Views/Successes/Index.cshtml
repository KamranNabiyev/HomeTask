@model List<Success>
@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
}

<!-- *********************     Success  Start     ************************ -->
<section class="success second-section my-5">
    <div class="container">
        <div class="row flex-column align-items-center justify-content-center">
            <div class="col-lg-6">
                @if (culture == "az")
                {
                    <h2 class="text-center">Uğurlarımız !</h2>
                    <p class="text-center mt-4">
                        BEYNƏLXALQ SERTİFİKAT QAZANMIŞ TƏLƏBƏ VƏ MÜƏLLİMLƏRİMİZ
                    </p>
                }
                else if (culture == "en")
                {
                    <h2 class="text-center">Our Success !</h2>
                    <p class="text-center mt-4">
                        OUR INTERNATIONAL CERTIFIED STUDENTS AND TEACHERS
                    </p>
                }
                else if (culture == "ru")
                {
                    <h2 class="text-center">Наш успехи !</h2>
                    <p class="text-center mt-4">
                        НАШИ МЕЖДУНАРОДНЫЕ СЕРТИФИЦИРОВАННЫЕ СТУДЕНТЫ И ПРЕПОДАВАТЕЛИ
                    </p>
                }


            </div>
        </div>
        <div class="row align-items-center justify-content-center my-5">
            @foreach (Success item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="item-box">
                        <div class="item">
                            <div class="item-img">
                                <img src="src/img/certificates/@item.Image"
                                     alt="" />
                            </div>

                            <div class="item-content yellow">
                                <div class="item-name d-flex justify-content-center align-items-center">
                                    @item.Who
                                </div>
                                <div class="item-pos">@item.Position</div>
                                <div class="item-by">@item.By</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- *********************       Success  End     ************************ -->
@section Css{
    <link rel="stylesheet"asp-append-version="true"  href="~/src/css/secondary.css" />
}