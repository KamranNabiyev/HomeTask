@model ContactVM
@inject IViewLocalizer Localizer
<!-- *********************     Main  Start     ************************ -->
<main>
    <!-- *********************     Contact  Start     ************************ -->
    <section class="contact second-section my-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="img-area">
                        <img src="~/src/img/contact.jpg"
                             alt="reception"
                             class="img-fluid" />
                        <div class="
                    contact-info
                    d-flex
                    justify-content-center
                    align-items-center
                  ">
                            <div class="contact-info-item mr-sm-5 mb-2 text-center">
                                <h6 style=" font-size: 13px; ">
                                    <i class="fas fa-phone-volume fa-2x mr-1"
                                       style="transform: rotate(-45deg)"
                                       aria-hidden="true"></i>@Localizer["Phone"]
                                </h6>
                                <span>@Model.ContectNumber</span>
                            </div>
                            <div class="contact-info-item mb-2 text-center">
                                <h6 style=" font-size: 13px; ">
                                    <i class="fas fa-envelope-open-text fa-2x mr-1"
                                       aria-hidden="true"></i>
                                    @Localizer["Email"]
                                </h6>
                                <span>@Model.ContectEmail</span>
                            </div>

                        </div>
                        <div class="address-info">
                            <div class="contact-info-item itb  d-flex justify-content-center align-items-baseline ">
                                <h6 class="text-center mr-2">
                                    <i class="fas fa-search-location mr-1"></i>@Localizer["Address"]
                                </h6>
                                <span> @Localizer["AddressInfo"] </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="title text-center my-5 mt-lg-0">@Localizer["ContactUs"]</h2>
                        </div>
                    </div>
                    <form class="contact-form pl-lg-3" method="post">
                        <div class="row">

                            <div class="col-lg-6 ">
                                <div class="form-group">
                                    <input class="form-control"
                                           placeholder="@Localizer["Name"]"
                                           asp-for="Name" />
                                    <div class="text-center mt-2 mb-4">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 ">
                                <div class="form-group">
                                    <input class="form-control"
                                           placeholder="@Localizer["Email"]"
                                           asp-for="Email" />
                                    <div class="text-center mt-2 mb-4">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group mt-2">
                                    <input class="form-control"
                                           placeholder="@Localizer["Subject"]"
                                           asp-for="Subject" />
                                    <div class="text-center mt-2 mb-4">
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group mt-2">
                                    <textarea class="form-control"
                                              asp-for="Message"
                                              cols="25"
                                              rows="5"
                                              placeholder="@Localizer["Message"]"></textarea>
                                    <div class="text-center mt-2 mb-4">
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <button type="submit" class="itBtn">@Localizer["Send"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- *********************       Contact  End     ************************ -->
    <!-- ******************************************************************** -->
    <!-- ******************************************************************** -->
</main>
<!-- *********************      Main  End     ************************ -->
@section Css{
    <link rel="stylesheet"asp-append-version="true"  href="~/src/css/secondary.css" />
}
@section Scripts{
    <partial name="_ValidationScriptsPartial">
}
