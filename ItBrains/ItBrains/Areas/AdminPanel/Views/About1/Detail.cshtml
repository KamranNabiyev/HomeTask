@model About1
@{
    ViewData["Title"] = "Detail";
}

<div class="col-md-12 grid-margin stretch-card bg-dark text-white">
    <div class="card d-flex flex-column bg-dark">
        <div class="card-body">
            <h4>Image</h4> <img src="~/src/img/@Model.Image" style="width: 200px; height:200px; object-fit: cover" />
        </div>
        
        <div class="card-body">
            <h4 style="font-family: sans-serif; font-size: 23px">Az - Description</h4>  <p class="font-italic"> @Model.AzDescription</p>
        </div>
        <div class="card-body">
            <h4 style="font-family: sans-serif; font-size: 23px">En - Description</h4>  <p class="font-italic"> @Model.EnDescription</p>
        </div>
        <div class="card-body">
            <h4 style="font-family: sans-serif; font-size: 23px">Ru - Description</h4>  <p class="font-italic"> @Model.RuDescription)</p>
        </div>
        <div class="card-body">
            <a asp-action="Index" class="btn btn-outline-secondary" style="margin-left: 10px">Go Back</a>
        </div>
    </div>
</div>


