
@model List<Persone>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mt-2">
                    <h3 class="card-title pt-3">Personajlar </h3>
                    <div class="button-effect">
                       <a class="effect effect-2 " asp-action="Reset"> Sıfırla <i class="mdi mdi-arrow-right-bold"></i></a>
                        <a class="effect effect-2 create" asp-action="Create"> Yenisi yarat <i class="mdi mdi-arrow-right-bold"></i></a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Nömrə
                                </th>
                                <th>
                                    Kim
                                </th>
                                <th>
                                    Əməliyatlar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Persone item in Model)
                            {
                                <tr>

                                    <td>
                                        Personaj N - @item.Id
                                    </td>
                                    <td>
                                        @if (item.IsView)
                                        {
                                            <span class="text-danger">Baxılıb</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Baxılmayıb </span>

                                        }
                                    </td>
                                    <td>
                                        @if (item.IsView)
                                        {
                                        <a asp-action="Activate" asp-route-id="@item.Id" class="effect effect-2 ">Baxılmayıb et</a>
                                        }


                                        <a asp-action="Detail" asp-route-id="@item.Id" class="effect effect-2 detail">Bax</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="effect effect-2 update">Duzelish et</a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


