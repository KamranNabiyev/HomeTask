@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="col-md-6 grid-margin stretch-card bg-dark text-light">
    <div class="card bg-dark text-light">
        <div class="card-body"> 
            <h4 class="card-title text-light">Change Password</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckPassword"></label>
                    <input asp-for="CheckPassword" class="form-control">
                    <span class="text-danger" asp-validation-for="CheckPassword"></span>
                </div>
                <button type="submit" class="btn btn-success mr-2">Change</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ScriptsPartial" />
}


