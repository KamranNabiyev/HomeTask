
@model List<Service>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mt-2">
                    <h3 class="card-title pt-3">Kurslar</h3>
                    <div class="button-effect">
                        <a class="effect effect-2 create" asp-action="Create"> Yenisi yarat <i class="mdi mdi-arrow-right-bold"></i></a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Adı
                                </th>
                                <th>
                                  Peşə
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Əməliyatlar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Service item in Model)
                            {
                                <tr>
                                    
                                    <td>
                                        @item.AzServiceName
                                    </td>
                                    <td>
                                        @item.AzServiceDescription
                                    </td>
                                    <td>
                                        @if (item.IsDeactive)
                                        {
                                            <span class="text-danger">Passiv</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Aktiv </span>

                                        }
                                    </td>
                                    <td>

                                        <div class="button-effect ">
                                            <a class="effect effect-2 detail" asp-action="Update" asp-route-id="@item.Id">Düzəliş Et <i class="mdi mdi-arrow-right-bold"></i></a>
                                        </div>
                                        @if (item.IsDeactive)
                                        {
                                            <a asp-action="Activate" asp-route-id="@item.Id" class="effect effect-2 update">Aktiv et</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="effect effect-2 delete">Deaktiv et</a>

                                        }
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






