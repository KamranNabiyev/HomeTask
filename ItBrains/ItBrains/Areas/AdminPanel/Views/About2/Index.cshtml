@model About2

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mt-2">
                    <h3 class="card-title pt-3">Haqqımızda</h3>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Şəkli
                                </th>
                                <th>
                                    Missiyamiz
                                </th>
                                <th>
                                    Əməliyatlar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img style="width:100px !important;height:100px !important" src="~/src/img/@Model.Image" />
                                </td>
                                <td>
                                    @((Model.AzDescription.Length < 23)? Model.AzDescription : Model.AzDescription.Substring(0,23) + "...")
                                </td>
                                <td>
                                    <div class="button-effect ">
                                        <a class="effect effect-2 detail" asp-action="Update" asp-route-id="@Model.Id">Düzəliş Et <i class="mdi mdi-arrow-right-bold"></i></a>
                                    </div>
                                    <div class="button-effect ">
                                        <a class="effect effect-2 delete" asp-action="Detail" asp-route-id="@Model.Id"> Ətraflı Bax <i class="mdi mdi-arrow-right-bold"></i></a>
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





